@using Falcon.App.Core.Application
@using Falcon.App.Core.Scheduling.ViewModels
@using Falcon.App.DependencyResolution
@model OrderRequisitionFormViewModel

@{
    var settings = IoC.Resolve<ISettings>();

}
<style type="text/css">
    .orderRequisitionform input[type="text"] {
        border: none;
        border-bottom: 1px solid black;
        font-size: 20px;
    }
    .orderRequisitionform .editor-row {
        overflow: hidden;
        margin-bottom: 5px;
        clear: both;
        float: left;    
        margin-left: 40px;
        width: 99%;
    }
</style>
<div class="orderRequisitionform" style="float: left; width: 97%; font-size: 20px;clear: both;">
    <div class="editor-row" style="margin-bottom: 20px; margin-top: 30px;">
        <img src="@settings.MediumLogoLocation" />
    </div>
    <div class="editor-row">
        <div style="clear:both;margin-top: 20px;margin-bottom: 50px">
            <div style="text-align: center;font-size: 25px;">
                <b>Order Requisition Form</b>
            </div>
        </div>
    </div>
    <div  class="editor-row">
        <div style="float: left;"><b>Event Id</b>: <input type="text" style="width:150px" value="@Model.EventId" /> </div><div style="float: right;"><b>Event Date</b>: <input type="text" value="@Model.EventDate.ToShortDateString()" style="width: 150px;" /> </div>
    </div>
    <div class="editor-row" style="margin-top:150px;clear: both;">
        <div style="float: left; width: 99%;">
            This is to verify that iFOBT test kit with Serial Number <input type="text" style="width:150px" /> has been handed over to Customer <input type="text" value="@Model.CustomerName" style="width: 250px;padding-left: 5px;font-size: 20px;" /> (@Model.CustomerId).
        </div>
    </div>
    <div class="editor-row" style="margin-top: 150px">
        <b>Patient Signature:</b> <input type="text" style="width: 470px" />
    </div>

    <div class="editor-row" style="margin-top: 50px">
        <b>Technician Signature:</b> <input type="text" style="width: 430px" />
    </div>
</div>