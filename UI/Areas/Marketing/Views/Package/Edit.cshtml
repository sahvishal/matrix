@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Marketing.ViewModels.PackageEditModel
@{
    ViewBag.Title = "Edit";
}
<h1>
    Edit Package</h1>
<div class="option-links">
    <a href="/Marketing/Package/">Manage Packages </a>
</div>
@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}
@{Html.BeginForm("Edit", "Package", FormMethod.Post, new { enctype = "multipart/form-data" });}   
@Html.EditorForModel()
<div class="submit-button-row">
    @Html.ActionLink("Close", "Index", "Package") &nbsp;&nbsp; @Html.SubmitButton("Edit Package")
</div>
@{Html.EndForm();}
