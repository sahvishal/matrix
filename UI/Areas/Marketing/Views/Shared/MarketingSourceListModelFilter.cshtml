@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Marketing.ViewModels.MarketingSourceListModelFilter
<h2>
    Search Records</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 16%">
        <div class="small-text">Name: </div>
        @Html.TextBoxFor(m => m.MarketingSourceName)            
