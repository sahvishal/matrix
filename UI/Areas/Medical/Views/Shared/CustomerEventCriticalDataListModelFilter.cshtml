@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Medical.ViewModels.CustomerEventCriticalDataListModelFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 32%">
        <div class="small-text">
            Event Date:
        </div>
        @Html.TextBoxFor(m => m.FromDate, new { @class = "datePicker", @style = "width:40%;" }) -
        @Html.TextBoxFor(m => m.ToDate, new { @class = "datePicker", @style = "width:40%;" })
    </div>    
    <div class="editor-column" style="width: 17%">
        <div class="small-text">
            Customer Name:
        </div>
        @Html.TextBoxFor(m => m.CustomerName, new { @style = "width:80%;" })
    </div>
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Customer Id:
        </div>
        @Html.TextBoxFor(m => m.CustomerId, new { @style = "width:80%;" })
    </div>    
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Event Id:
        </div>
        @Html.TextBoxFor(m => m.EventId, new { @style = "width:80%;" })
    </div> 
</div>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="float: right; width: 18%; padding-top: 12px; text-align: right;">
        @Html.ActionLink("Clear", "GetCustomerEventCriticalData", "CustomerEventCriticalData") | @Html.SubmitButton("Search")
    </div>
</div>

