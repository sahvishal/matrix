@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Medical.ViewModels.PreQualifiedQuestionTemplateModelFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Name:
        </div>
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Test
        </div>
        @Html.DropDownListFor(m => m.TestId, DropDownHelper.AllTests(), new { @style = "width:100%;" })
    </div>
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        @Html.ActionLink("Clear", "Index", "PreQualifiedQuestion") | @Html.SubmitButton("Search")
    </div>
</div>


