@using Falcon.App.Core.Medical.Enum
@using Falcon.App.Core.Extensions

<style>
    #list-filter h2 {
        background-color: #dedede;
    }
</style>

<div id="list-filter">
    <h2>Old Test States</h2>

    <div style="padding-left: 5px; overflow: hidden;">

        @foreach (var testDescription in OldTestResultStateLabel.NoResults.GetNameValuePairs())
        {

            <div class="editor-column-twoinrow" style="width: 20%; padding: 2px 10px 2px 2px">
                <span style="float: left">
                    <img src="/App/Images/ResultState/@(((OldTestResultStateLabel)testDescription.FirstValue).ToString()).gif" alt="Results Not Entered" />
                </span><span class="small-text" style="padding-left: 3px; padding-bottom: 2px;">@testDescription.SecondValue</span>
            </div>

        }
        <div class="editor-column-twoinrow" style="width: 20%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: White; background-color: Red; border: 2px solid; border-radius: 14px; width: 15px; text-align: center;" title="Critical Patient">
                    <b>C</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Critical Patient</span>
            </span>
        </div>
        <div class="editor-column-twoinrow" style="width: 20%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: White; background-color: Red; border: 2px solid; border-radius: 14px; width: 15px; text-align: center;" title="Unpaid Patient">
                    <b>U</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Unpaid Patient</span>
            </span>
        </div>
        <div class="editor-column-twoinrow" style="width: 20%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: black; background-color: yellow; border: 2px ; border-radius: 14px; width: 15px; text-align: center;" title="Priority in Queue">
                    <b>P</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Priority In Queue</span>
            </span>
        </div>
    </div>
</div>

<div id="list-filter" style="margin-top: 30px;">
    <h2>New Test States</h2>

    <div style="padding-left: 5px; overflow: hidden;">

        @foreach (var testDescription in NewTestResultStateLabel.NoResults.GetNameValuePairs())
        {

            <div class="editor-column-twoinrow" style="width: 30%; padding: 2px 10px 2px 2px">
                <span style="float: left">
                    <img src="/App/Images/NewResultState/@(((NewTestResultStateLabel)testDescription.FirstValue).ToString()).png" alt="Results Not Entered" />
                </span><span class="small-text" style="padding-left: 3px; padding-bottom: 2px;">@testDescription.SecondValue</span>
            </div>

        }
        <div class="editor-column-twoinrow" style="width: 30%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: White; background-color: Red; border: 2px solid; border-radius: 14px; width: 15px; text-align: center;" title="Critical Patient">
                    <b>C</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Critical Patient</span>
            </span>
        </div>
        <div class="editor-column-twoinrow" style="width: 30%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: White; background-color: Red; border: 2px solid; border-radius: 14px; width: 15px; text-align: center;" title="Unpaid Patient">
                    <b>U</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Unpaid Patient</span>
            </span>
        </div>
        <div class="editor-column-twoinrow" style="width: 30%; padding: 2px 10px 2px 2px">
            <span style="float: left">
                <span style="float: left; color: black; background-color: yellow; border: 2px ; border-radius: 14px; width: 15px; text-align: center;" title="Priority in Queue">
                    <b>P</b>
                </span>
                <span class="small-text" style="padding-bottom: 2px;">Priority In Queue</span>
            </span>
        </div>
    </div>
</div>
