@using Falcon.App.Core.Medical.ViewModels
@using Falcon.App.UI.HtmlHelpers
@model EventCustomerResultStatusListModelFilter
<script type="text/javascript" src="/App/jquery/js/jQuery.autoCompleteExtender.js"></script>
<link type="text/css" href="/App/jquery/css/AutoComplete/auto-search.css" rel="Stylesheet" />
<div id="list-filter">
    <h2>
        Search Event</h2>
    <div style="padding-left: 5px; overflow: hidden;">
        <div class="editor-column" style="width: 24%;">
            <div class="small-text">
                @Html.LabelFor(m => m.EventId)
            </div>
            @Html.TextBoxFor(m => m.EventId, new { @style = "width:85%;" })
        </div>
        <div class="editor-column" style="width: 24%;">
            <div class="small-text">
                @Html.LabelFor(m => m.CustomerId)
            </div>
            @Html.TextBoxFor(m => m.CustomerId, new { @style = "width:85%;" })
        </div>
        <div class="editor-column" style="width: 24%">
            <div class="small-text">
                @Html.LabelFor(m => m.Host)
            </div>
            @Html.TextBoxFor(m => m.Host, new { @style = "width:85%;", @class = "auto-search-event" })
        </div>
        <div class="editor-column" style="width: 24%">
            <div class="small-text">
                @Html.LabelFor(m => m.EventDate)
            </div>
            @Html.TextBoxFor(m => m.EventDate, new { @style = "width:85%;", @class = "datePicker" })
        </div>
    </div>
    <div style="padding-left: 5px;padding-top: 5px; overflow: hidden;">
        <div class="editor-column" style="width: 60%">
            <span class="small-text" style="font-style: italic">(Please provide either EventId or both Host and Event Date or EventId and CustomerId)</span>
        </div>
        <div class="editor-column" style="padding-top: 15px; text-align: right; float: right;">
            @Html.SubmitButton("Search")
        </div>
    </div>
    </div>
<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $('.auto-search-event').autoComplete({
            minchar: 3,
            autoChange: true,
            url: '/App/AutoCompleteService.asmx/GetEventHostbyprefixText',
            type: "POST",
            data: "prefixText",
            contextKey: 0
        });
    });

</script>
