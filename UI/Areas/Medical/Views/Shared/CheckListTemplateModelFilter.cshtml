@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Medical.ViewModels.CheckListTemplateModelFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Name:
        </div>
        @Html.TextBoxFor(m => m.Name) 
      
    </div>
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Select Type:
        </div>
        @Html.DropDownList("CheckListTypeId", DropDownHelper.GetAllCheckListType(), new { @style = "width:160px;" })


    </div>
 
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        @Html.ActionLink("Clear", "Index", "CheckList") | @Html.SubmitButton("Search")
    </div>
</div>


