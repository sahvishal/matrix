@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Medical.ViewModels.SurveyTemplateEditModel
@{
    ViewBag.Title = "Create";
}

<h1>Create Survey Template</h1>
<div class="option-links">
    <a href="/Medical/Survey/">Manage Survey Template </a>
</div>
@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}
@{Html.BeginForm("Create", "Survey");} 
<div class="submit-button-row">
    @Html.ActionLink("Close", "Index", "Survey") &nbsp;&nbsp; <input type="button" value="Submit" onclick="SubmitQuestions()" />
</div>
@Html.EditorForModel()
<div class="submit-button-row">
    @Html.ActionLink("Close", "Index", "Survey") &nbsp;&nbsp; <input type="button" value="Submit" onclick="SubmitQuestions()" />
    <div style="display: none;">@Html.SubmitButton("Create Template")</div> 
</div>
@{Html.EndForm();}

