@using Falcon.App.Core.Extensions
@model Falcon.App.Core.Medical.ViewModels.TestListModel
@{
    ViewBag.Title = "Manage Tests";
}

<h1>Manage Tests</h1>
<div id="list-filter">
    @{Html.BeginForm("Index", "Test", FormMethod.Get);}
    @Html.Partial("TestListModelFilter", new ViewDataDictionary(Model.Filter))
    @{Html.EndForm();}
</div>
@if (Model != null && !Model.Collection.IsNullOrEmpty())
{
    @Html.DisplayFor(m => m.PagingModel)
    <table id="list-view">
        <tr>
            <th style="text-align:center">
                Name
            </th>
            <th style="text-align:right">
                Price
            </th>
            <th style="text-align:right">
                Price(In package)
            </th>
            <th style="text-align:right">
                Refund Price
            </th>
            <th style="text-align:center">
                Status
            </th>                                   
            <th>
                Action
            </th>
        </tr>
        @foreach (var test in Model.Collection)
        {
            <tr>
                <td>
                    @test.Name
                </td>
                <td style="text-align:right">
                    @test.Price
                </td>
                <td style="text-align:right">
                    @test.PackagePrice
                </td>
                <td style="text-align:right">
                    @test.RefundPrice
                </td>
                <td style="text-align:center">
                    @(test.IsActive?"Active":"InActive")
                </td>
                <td>
                    <a href="/Medical/Test/Edit?id=@test.TestId">Edit</a>
                </td>
            </tr>
        }
    </table>
    @Html.DisplayFor(m => m.PagingModel)
}
else
{
    <div>
        <h2>
            No Records found.</h2>
    </div>
}

@section scripts {
    <script type="text/javascript">
        $(function () {
            $("table#list-view tr:even").addClass("alt-row");
        });


        $(function () {
            $("tr:not(:has(th))").hover(function () {
                $(this).addClass('row-hover');
            },
            function () {
                $(this).removeClass('row-hover');
            });
        });
    </script>
}
