@using Falcon.App.UI.HtmlHelpers
@using Falcon.App.Core.Extensions
@model Falcon.App.Core.Operations.ViewModels.PodEditModel
@{
    ViewBag.Title = "Create New Pod/Hub";
}
<h1>Create New Pod/Hub</h1>
<div class="option-links">
    <a href="/Operations/Pod/"> Manage Pods/Hubs </a>
</div>


@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}
@{Html.BeginForm();}
@Html.EditorForModel()
<div class="submit-button-row">
    @Html.ActionLink("Close", "Index", "Pod") &nbsp;&nbsp; @Html.SubmitButton("Create Pod")
</div>

@{Html.EndForm();}
