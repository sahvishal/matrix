@using Falcon.App.Core.Application
@using Falcon.App.Core.Operations.ViewModels
@using Falcon.App.DependencyResolution
@using Falcon.App.UI.HtmlHelpers


@model ExportableReportsQueueFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 18%">
        <div class="small-text"><b>Requested</b> From</div> @Html.TextBoxFor(m => m.FromDate, new { style = "padding-right: 4px;", @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 20%">
        <div class="small-text">To</div> @Html.TextBoxFor(m => m.ToDate, new { @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 30%">
        <div class="small-text">
            Report
        </div>
        @{
            var userSession = IoC.Resolve<ISessionContext>().UserSession;
        }
        @Html.DropDownListFor(m => m.ReportId, DropDownHelper.GetReportType(userSession.CurrentOrganizationRole.GetSystemRoleId))
    </div>
    <div class="editor-column" style="float: right; padding-top:12px; text-align: right;">
        @Html.ActionLink("Clear", "Index", "Download") | @Html.SubmitButton("Search")
    </div>
</div>
