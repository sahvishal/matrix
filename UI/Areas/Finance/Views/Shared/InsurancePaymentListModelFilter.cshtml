@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Finance.ViewModels.InsurancePaymentListModelFilter

<h2>Search </h2>

<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 15%">
        <div class="small-text">
            <b>Event</b> From
        </div>
        @Html.TextBoxFor(m => m.EventFrom, new { @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 24%">
        <div class="small-text">
            To
        </div>
        @Html.TextBoxFor(m => m.EventTo, new { @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 15%">
        <div class="small-text">
            Payment Status
        </div>
        @Html.DropDownListFor(m => m.Status, DropDownHelper.InsurancePaymentStatusList())
    </div>
    <div class="editor-column" style="width: 20%">
        <div class="small-text">Event Id: </div>
        @Html.TextBoxFor(m => m.EventId)
    </div>
    <div class="editor-column" style="padding-top: 10px; text-align: right; float: right;">
        @Html.ActionLink("Clear", "InsurancePayment", "Reports") | @Html.SubmitButton("Search")
    </div>
</div>
