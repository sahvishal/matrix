@using Falcon.App.Core.Finance.ViewModels;
@model HealthPlanRevenueByTestModel
@{
    string testName = Model.TestName;
    string divName = "miniContainer" + Model.TestId.ToString();
}
<div class='mini-container' id="@divName" style="border: 1px solid gray !important;">
    <div style="float: left; margin-right: 20px; white-space:nowrap">
        @Html.Label("", testName) &nbsp;  @Html.TextBoxFor(m => m.Price, new { @class = "testclass", onblur = "updateTest(this)", @onkeydown = "return KeyPress_DecimalAllowedOnly(event);" ,@maxlength="10"}) $&nbsp; [<a href="javascript:void(0)" data-key="@Model.TestId" onclick="RemoveTest(this);">Remove</a>]
        @Html.ValidationMessageFor(m => m.Price)
    </div>

    <div style="display:none;">
        @Html.HiddenFor(m => m.TestId)
        @Html.HiddenFor(m => m.TestName)
    </div>
</div>
