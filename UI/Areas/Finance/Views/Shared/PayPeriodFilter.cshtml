@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Finance.ViewModels.PayPeriodFilter

<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 24%">
        <div class="small-text">
            Start Date
        </div>
        @Html.TextBoxFor(m => m.StartDate, new { @class = "datePicker", @style = "width:90%;" })
    </div>
    <div class="editor-column" style="width: 24%">
        <div class="small-text">
            Period
        </div>
        @Html.DropDownListFor(m => m.NumberOfWeek, DropDownHelper.GetPayPeriodWeeks(), new { @style = "width:200px;" })
    </div>
    <div class="editor-column" style="padding-top: 10px; text-align: right; float: right;">
        @Html.ActionLink("Clear","Index", "PayPeriod") | @Html.SubmitButton("Search")
    </div>
</div>
