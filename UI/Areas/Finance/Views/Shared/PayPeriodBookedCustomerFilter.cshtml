@model Falcon.App.Core.Finance.ViewModels.PayPeriodBookedCustomerFilter

<div style="padding-left: 5px;padding-top: 10px; padding-bottom: 10px;">
    @if (Model.StartDate.HasValue && Model.EndDate.HasValue)
    {
        <div class="editor-column" style="width: 95%;">
            <div class="small-text">
                <b>Pay Period</b> Effective From @Model.EffectiveDate.ToShortDateString() for @(Model.NumberOfWeek == 1 ? " 1 Week" : Model.NumberOfWeek + " Weeks")<br />
                Showing @(Model.ShowAttendedCustomersOnly ? "attended" : "") customers booked between @Model.StartDate.Value.ToShortDateString() - @Model.EndDate.Value.ToShortDateString()
            </div>
        </div>

    }
</div>