@using Falcon.App.Core.Finance.ViewModels;
@model HealthPlanRevenueEditModel
@{
    ViewBag.Title = "Health Plan Revenue Config";
}
<script type="text/javascript" src="/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="/App/JavascriptFiles/validations.js?v=<%=DateTime.Now.Ticks %>"></script>
@using (Ajax.BeginForm("HealthPlanRevenueConfigModel", "HealthPlanRevenue", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "healthPlanRevenue-model", OnComplete = "healthPlanRevenueToggle" }))
{
    <div style="margin:10px;">
        <div id="healthPlanRevenue-model">@Html.Partial("HealthPlanRevenueConfigModel")</div>
        <div class="btnrow">
            <input type="submit" class="btn healthPlanRevenue-model-btn" style="float: right;margin-right: 10px;display: block" value="Save" /> <a href="/Finance/HealthPlanRevenue/index" style="float: right;padding-right: 10px;padding-top: 6px">Close</a>
        </div>
        <div class="healthPlanRevenue-model-btn" style="display: none; text-align: right;">
            <img src="/App/Images/loading.gif" alt="" />Saving
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("input[type=submit]").click(function () {
                healthPlanRevenueToggle();
            });
        });
        function healthPlanRevenueToggle() {
            $(".healthPlanRevenue-model-btn").toggle();
           
            }
    </script>
}
<style type="text/css">
    .btnrow {
        width: 100%;
        height: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
    }
</style>
