    .peoplecountbox {
        float: inherit;
        width: 59px;
        height: 23px;
        background: url('/App/images/peoplecountboxbg.gif');
        padding-top: 5px;
        text-align: center;
        color: #000;
    }

    .kpidatabox_big {
        float: left;
        width: 140px;
        height: 27px;
        background: url('/App/images/bigboxdata-kpi-fdbrd.gif');
        padding-top: 6px;
        font: bold 16px arial;
        text-align: center;
        color: #000;
    }

    .kpititletxt_16px {
        float: left;
        width: 120px;
        padding-top: 7px;
        color: #333;
    }

    .orngbdrboxinnerrow {
        float: left;
        width: 305px;
    }

    .malefemaleicon_dbrd {
        float: left;
        width: 25px;
        margin-right: 10px;
    }

    .peoplecountbox-revenue {
        float: left;
        min-width: 60px;
        height: 23px;
        border: solid 1px #EEECE1;
        padding-top: 5px;
        font: bold 16px arial;
        text-align: center;
        color: #000;
        padding-left: 3px;
        padding-right: 3px;
    }
</style>