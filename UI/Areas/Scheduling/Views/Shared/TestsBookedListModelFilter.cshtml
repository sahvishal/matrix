@using Falcon.App.Core.Scheduling.ViewModels
@using Falcon.App.UI.HtmlHelpers
@using openDicom.Encoding
@using DateTime = System.DateTime

@model TestsBookedListModelFilter

<h2>Search Records</h2>

<div style="padding-left: 5px; overflow: hidden; padding-bottom:10px;">
    <div class="editor-column" style="width: 16%">
        <div class="small-text"><b>Event</b> From: </div>
        @Html.TextBoxFor(m => m.FromDate, new { @class = "eventFilterDate",  @value = String.Format("{0:yyyy-MM-dd}", Model.FromDate.HasValue ? Model.FromDate : DateTime.Now) })            
    </div>
    <div class="editor-column" style="width: 18%">
        <div class="small-text">To: </div>
        @Html.TextBoxFor(m => m.ToDate, new { @class = "eventFilterDate" })
    </div> 
    <div class="editor-column" style="width: 18%">
        <div class="small-text">Event Id:</div>
        @Html.TextBoxFor(m=>m.EventId)
    </div>
    <div class="editor-column" style="width: 12%">
        <div class="small-text">
            Pod:
        </div>
        @Html.TextBoxFor(m => m.Pod, new { @style = "width:80%;" })
    </div>
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Test:
        </div>
        @Html.DropDownListFor(m => m.TestId, DropDownHelper.AllTests(), new { @style = "width:90%;" })
    </div>
    <div class="editor-column" style="float: right; padding-top:12px; text-align: right;">
        @Html.ActionLink("Clear", "TestsBooked", "Reports") | @Html.SubmitButton("Search")
    </div> 
</div>