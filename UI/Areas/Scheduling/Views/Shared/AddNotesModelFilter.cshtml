@using Falcon.App.Core.Scheduling.ViewModels
@using Falcon.App.UI.HtmlHelpers
@using System

@model AddNotesModelFilter

<h2>Search Records</h2>
@Html.HiddenFor(m => m.Id)
<div style="padding-left: 5px; overflow: hidden; padding-bottom:10px;">
    <div class="editor-column" style="width: 18%">
        <div class="small-text">
            Health Plan:
        </div>
        @Html.DropDownListFor(m => m.HealthPlanId, DropDownHelper.GetHealthPlanCorporateAccounts(), new { @style = "width:90%;" })
    </div>
    <div class="editor-column" style="width: 17%">
        <div class="small-text"><b>Event</b> From: </div>
        @Html.TextBoxFor(m => m.EventDateFrom, new { @class = "eventFilterDate" })
    </div>
    <div class="editor-column" style="width: 20%">
        <div class="small-text">To: </div>
        @Html.TextBoxFor(m => m.EventDateTo, new { @class = "eventFilterDate" })
    </div>
    <div class="editor-column" style="width: 12%">
        <div class="small-text">
            Pod:
        </div>
        @Html.DropDownListFor(m => m.PodId, DropDownHelper.Pods(), new { @style = "width:80%;" })
    </div>
    <div class="editor-column" style="width:18%; float: right; padding-top:12px; text-align: right;">
        @Html.ActionLink("Clear", "AddEventNotes", "Event") | @Html.SubmitButton("Search")
    </div>
</div>