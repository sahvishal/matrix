@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Users.ViewModels.MedicalVendorListModelFilter
           
@{Html.BeginForm("Index", "MedicalVendor", FormMethod.Get);}
<h2>
    Search Medical Vendor</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 50%">
        <div class="small-text">
            Name
        </div>
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div class="editor-column" style="padding-top: 10px; float: right; text-align: right">
        @Html.ActionLink("Clear", "Index", "MedicalVendor") | @Html.SubmitButton("Search")
    </div>
</div>
@{Html.EndForm();}
