@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Users.ViewModels.HospitalFacilityListModelFilter
           
@{Html.BeginForm("Index", "HospitalFacility", FormMethod.Get);}
<h2>
    Search Hospital Facility</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 30%">
        <div class="small-text">
            Name
        </div>
        @Html.TextBoxFor(m => m.Name, new { @style = "width:90%;" })
    </div>
    <div class="editor-column" style="width: 26%">
        <div class="small-text">
            Parent Hospitals:
        </div>
        @Html.DropDownListFor(m => m.ParentHospitalPartnerId, DropDownHelper.ParentHospitalPartners(), new { @style = "width:100%;" })
    </div> 
    <div class="editor-column" style="padding-top: 10px; float: right; text-align: right">
        @Html.ActionLink("Clear", "Index", "HospitalFacility") | @Html.SubmitButton("Search")
    </div>
</div>
@{Html.EndForm();}