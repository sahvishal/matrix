@using Falcon.App.UI.HtmlHelpers
@using Falcon.App.Core.Users.ViewModels

@model MedicalVendorEditModel
@{
    ViewBag.Title = "Edit Medical Vendor";
}

<h2>Edit Medical Vendor</h2>

@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}

@{Html.BeginForm("Edit", "MedicalVendor", FormMethod.Post, new { enctype = "multipart/form-data" });}    
    
    @Html.EditorForModel()

    <div class="submit-button-row">
        @Html.ActionLink("Close", "Index", "MedicalVendor")&nbsp;&nbsp; @Html.SubmitButton("Update Medical Vendor")
    </div>

@{Html.EndForm();}