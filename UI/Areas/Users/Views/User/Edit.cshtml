@using Falcon.App.UI.HtmlHelpers

@model Falcon.App.Core.Users.ViewModels.UserEditModel

@{
    ViewBag.Title = "Edit Existing User";
}

<h1>Edit User</h1>
<div class="option-links">
    <a href="/Users/User/"> + Manage Users </a>
</div>

@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}


@{Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" });}    

    @Html.EditorForModel()

    <div class="submit-button-row">
         @Html.ActionLink("Close","Index","User") &nbsp;&nbsp; @Html.SubmitButton("Update User")
     </div>

@{Html.EndForm();}
