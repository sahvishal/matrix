@using Falcon.App.UI.HtmlHelpers
@using Falcon.App.Core.Users.ViewModels

@model HospitalFacilityEditModel
@{
    ViewBag.Title = "Edit Hospital Facility";
}

<h2>Edit Hospital Facility</h2>

@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}

@{Html.BeginForm("Edit", "HospitalFacility", FormMethod.Post, new { enctype = "multipart/form-data" });}    
    
    @Html.EditorForModel()

    <div class="submit-button-row">
        @Html.ActionLink("Close", "Index", "HospitalFacility")&nbsp;&nbsp; @Html.SubmitButton("Update Hospital Facility")
    </div>

@{Html.EndForm();}