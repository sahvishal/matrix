@using Falcon.App.Core.Users.ViewModels
@model CorporateAccountBasicInfoEditModel

@using (Ajax.BeginForm("BasicInfoModel", "CorporateAccount", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "basic-info", OnComplete = "toggle" }))
{
    <div style="margin:10px;">
        @Html.HiddenFor(m => m.IsNew)
        <div id="basic-info">
            @Html.Partial("BasicInfoModel")
        </div>
       
        <div class="btnrow">
            <input type="submit" class="btn save-settigs-btn" style="float: right;margin-right: 10px;display: block" value="Save & Next" /> <a href="/Users/CorporateAccount" style="float: right;padding-right: 10px;padding-top: 6px">Close</a>
        </div>
        <div class="save-settigs-btn" style="display: none; text-align: right;">
            <img src="/App/Images/loading.gif" alt="" />Saving
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function() {
            $("input[type=submit]").click(function () {
                tinyMCE.execCommand('mceFocus', false, 'Content');
                tinyMCE.execCommand('mceRemoveControl', false, 'Content');
                toggle();
            });
        });
        function toggle() {
            $(".save-settigs-btn").toggle();
        }
    </script>
    
    
}
<style type="text/css">
    .btnrow {
        width: 100%;
        height: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
    }
</style>