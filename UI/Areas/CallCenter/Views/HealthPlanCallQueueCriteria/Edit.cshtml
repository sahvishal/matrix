@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.CallQueues.ViewModels.HealthPlanCallQueueCriteriaEditModel
@{
    ViewBag.Title = "Edit Call Queue Assignment";
}
<h1>
    Edit Call Queue Assignment <span class="edit-info-tip" style="vertical-align: middle;"><img alt="Info" src="/App/Images/info-icon.gif"></span>
    <div class="edit-prop-tip-info" style="display: none;">
        Use this page to assign callqueues to the call center agents.
    </div>
</h1>
<div class="option-links">
    <a href="/CallCenter/HealthPlanCallQueueCriteria/ManageCriteria">Manage Call Queue Assignment</a>
</div>
@if (Model != null)
{
    @Html.Partial("Message", new ViewDataDictionary(Model.FeedbackMessage))
}
@{Html.BeginForm(null, null, FormMethod.Post, new { @id = "masterForm" });}
@Html.EditorForModel()
<div class="submit-button-row">
    <a href="/CallCenter/HealthPlanCallQueueCriteria/ManageCriteria">Close</a> &nbsp;&nbsp; @*@Html.SubmitButton("Save")*@
    <button type="button" onclick="checkAndSubmit()">Save</button>
</div>

<script>
    $(".edit-info-tip").qtip({
        content: {
            title: function (api) {
                return "Info";
            },
            text: function (api) {
                return $(this).parent().find('.edit-prop-tip-info').html();
            }
        },
        style: {
            width: '300px'
        },
        position: {
            adjust: {
                method: 'shift'
            }
        },
    });
</script>

@{Html.EndForm();}