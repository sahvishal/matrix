@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Scheduling.ViewModels.CampaignCallQueueFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            From Date:
        </div>
        @Html.TextBoxFor(m => m.StartDate, new { @style = "width:90%;" })
    </div>
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            To Date:
        </div>
        @Html.TextBoxFor(m => m.EndDate, new { @style = "width:90%;" })
    </div>
    @Html.HiddenFor(m=>m.CallQueueId)
    @Html.HiddenFor(m => m.CriteriaId)
    @Html.HiddenFor(m => m.HealthPlanId)
    
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        @Html.ActionLink("Clear", "CampaignCallQueue", "Reports") | @Html.SubmitButton("Search")
    </div>
</div>