@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.CallCenter.ViewModels.AgentConversionReportFilter
<h2>
    Search Records
</h2>

<style type="text/css">
    .required-filter {
        color: red;
    }
</style>

<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 17%">
        <div class="small-text">From: </div>
        @Html.TextBoxFor(m => m.FromDate, new { @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 20%">
        <div class="small-text">To: </div>
        @Html.TextBoxFor(m => m.ToDate, new { @class = "datePicker" })
    </div>
    <div class="editor-column" style="width: 25%">
        <div class="small-text">
            Call Center Agent:
        </div>
        @Html.DropDownListFor(m => m.CallCenterAgentId, DropDownHelper.GetAllCallCenterRep(), new { @style = "width: 85%" })
    </div>
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        @Html.ActionLink("Clear", "AgentConversionReport", "Reports", new { showPreviousDayData = true }, null) | @Html.SubmitButton("Search")
    </div>
</div>