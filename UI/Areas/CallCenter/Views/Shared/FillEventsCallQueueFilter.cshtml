@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.Scheduling.ViewModels.FillEventsCallQueueFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            EventId:
        </div>
        @Html.TextBoxFor(m => m.EventId, new { @style = "width:90%;" })
    </div>
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            Pod:
        </div>
        @Html.TextBoxFor(m => m.Pod, new { @style = "width:90%;" })
    </div>
    @Html.HiddenFor(m=>m.CallQueueId)
    @Html.HiddenFor(m => m.CriteriaId)
    @Html.HiddenFor(m => m.HealthPlanId)
    
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        <a href="javascript:void(0)" onclick="backtoCriteraSelection()">Back</a> |  <a href="javascript:void(0)" onclick="clearCritera()">Clear</a> | @Html.SubmitButton("Search")
    </div>
</div>
<script type="text/javascript">
    function backtoCriteraSelection() {
        window.location.href = "/CallCenter/Reports/CallQueueCriteriaReports?HealthPlanId=@Model.HealthPlanId&CallQueueId=@Model.CallQueueId";
    }
    
    function clearCritera() {
        window.location.href = "/CallCenter/Reports/FillEventCallQueue?HealthPlanId=@Model.HealthPlanId&CallQueueId=@Model.CallQueueId&CriteriaId=@Model.CriteriaId";
    }
</script>