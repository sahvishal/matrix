@using Falcon.App.UI.HtmlHelpers
@model Falcon.App.Core.CallQueues.ViewModels.CallQueueListModelFilter
<h2>
    Search Records
</h2>
<div style="padding-left: 5px; overflow: hidden;">
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            Name:
        </div>
        @Html.TextBoxFor(m => m.Name, new {@style="width:90%;"})
    </div>
    <div class="editor-column" style="width: 40%">
        <div class="small-text">
            Criteria:
        </div>
        @Html.DropDownListFor(m => m.CriteriaId, DropDownHelper.QueueCriteria(), new { @style = "width: 85%" })
    </div>
    <div class="editor-column" style="padding-top: 10px; width: 18%; float: right; text-align:right;">
        @Html.ActionLink("Clear", "Index", "CallQueue") | @Html.SubmitButton("Search")
    </div>
</div>