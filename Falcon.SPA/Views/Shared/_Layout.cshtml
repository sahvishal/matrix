@using System.Configuration

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/toastr.css" rel="stylesheet" />
<link href="~/Content/alertify/alertify.core.css" rel="stylesheet" />
<link href="~/Content/alertify/alertify.default.css" rel="stylesheet" />
<link href="~/Content/auto-complete.css" rel="stylesheet" />
<link href="~/Content/jquery.qtip.min.css" rel="stylesheet" />


@Styles.Render("~/Content/bootstrap")
@RenderSection("moduleCss", false)
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/thirdparty/imagesloaded.pkg.min.js"></script>
<script src="~/Scripts/thirdparty/jquery.qtip.min.js"></script>
@Scripts.Render("~/bundles/angular")
@Scripts.Render("~/bundles/thirdparty")
