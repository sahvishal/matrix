@Scripts.Render("~/bundles/public/core")
@Scripts.Render("~/bundles/public/shared")
@RenderSection("moduleBundle", false)

<main class="main" us-spinner spinner-key="online-spinner">
    <div data-ui-view>
        <img src="~/Images/spinner.gif" class="home-spinner"/>
    </div>
</main>

<script type="text/javascript">
    ApplicationConfiguration.remoteServiceUrl = '@(ConfigurationManager.AppSettings["AppUrl"]+"/api/")';
    ApplicationConfiguration.applicationIdentity = '@(ConfigurationManager.AppSettings["ApplicationIdentity"])';
    ApplicationConfiguration.domainUrl = '@(ConfigurationManager.AppSettings["ApplicatoinDomainUrl"])';
    ApplicationConfiguration.phoneTollFree = '@(ConfigurationManager.AppSettings["PhoneTollFree"])';
    ApplicationConfiguration.siteUrl = '@(ConfigurationManager.AppSettings["SiteUrl"])';
    ApplicationConfiguration.appUrl = '@(ConfigurationManager.AppSettings["AppUrl"])';
</script>
